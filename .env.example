# ==============================================
# تكوينات منصة تمسيك - Tamsik Platform
# ==============================================

# ----------------------------------------------
# Application Settings
# ----------------------------------------------
APP_NAME="Tamsik"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://tamsik.org
APP_TIMEZONE=Asia/Aden
APP_LOCALE=ar

# ----------------------------------------------
# Logging Configuration
# ----------------------------------------------
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tamsik_db
DB_USERNAME=root
DB_PASSWORD=

# ----------------------------------------------
# Cache & Session Configuration
# ----------------------------------------------
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# ----------------------------------------------
# Memcached Configuration (Optional)
# ----------------------------------------------
MEMCACHED_HOST=127.0.0.1

# ----------------------------------------------
# Redis Configuration (Optional)
# ----------------------------------------------
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ----------------------------------------------
# Mail Configuration
# ----------------------------------------------
# استخدم SMTP للبريد الإلكتروني
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=info@tamsik.org
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="info@tamsik.org"
MAIL_FROM_NAME="تمسيك"

# ----------------------------------------------
# AWS S3 Configuration (Optional)
# ----------------------------------------------
# إذا كنت تستخدم Amazon S3 لتخزين الملفات
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ----------------------------------------------
# Pusher Configuration (Optional)
# ----------------------------------------------
# للإشعارات الفورية (اختياري)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# ----------------------------------------------
# Vite Configuration
# ----------------------------------------------
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ----------------------------------------------
# Laravel Sanctum Configuration
# ----------------------------------------------
# أضف النطاقات المسموح بها للـ API
SANCTUM_STATEFUL_DOMAINS=localhost,127.0.0.1,127.0.0.1:8000,::1,tamsik.org,www.tamsik.org

# ----------------------------------------------
# Upload Configuration
# ----------------------------------------------
# الحد الأقصى لحجم الملف بالكيلوبايت (10MB = 10240KB)
MAX_UPLOAD_SIZE=10240

# أنواع الصور المسموح بها
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp

# أنواع الملفات الصوتية المسموح بها
ALLOWED_AUDIO_TYPES=mp3,wav,ogg,m4a

# ----------------------------------------------
# Site Configuration
# ----------------------------------------------
# معلومات الموقع
SITE_DESCRIPTION="منصة إسلامية شاملة تضم خطب وفتاوى ومحاضرات علماء اليمن"
SITE_KEYWORDS="خطب,فتاوى,محاضرات,إسلام,يمن,علماء"

# معلومات الاتصال
CONTACT_EMAIL="info@tamsik.org"
CONTACT_PHONE="+967 780002776"

# ----------------------------------------------
# Security Configuration
# ----------------------------------------------
# تفعيل HTTPS في الإنتاج
# SESSION_SECURE_COOKIE=true
# SESSION_SAME_SITE=lax

# ----------------------------------------------
# Performance Configuration
# ----------------------------------------------
# تفعيل الكاش في الإنتاج
# CACHE_DRIVER=redis
# SESSION_DRIVER=redis
# QUEUE_CONNECTION=redis

# ----------------------------------------------
# Backup Configuration (Optional)
# ----------------------------------------------
# إعدادات النسخ الاحتياطي
# BACKUP_DISK=s3
# BACKUP_NOTIFICATION_EMAIL=admin@tamsik.org

# ==============================================
# ملاحظات مهمة:
# ==============================================
# 1. قم بتوليد APP_KEY جديد باستخدام: php artisan key:generate
# 2. في الإنتاج، اجعل APP_DEBUG=false
# 3. في الإنتاج، اجعل APP_ENV=production
# 4. لا تشارك ملف .env الحقيقي أبداً!
# 5. استخدم كلمات مرور قوية لقاعدة البيانات
# 6. قم بتكوين البريد الإلكتروني بشكل صحيح
# 7. في الإنتاج، استخدم Redis للكاش والجلسات لأداء أفضل
# ==============================================

