# ========================================
# ملف .env للإنتاج - Production Environment
# ========================================
# ⚠️ هذا ملف نموذجي - انسخه إلى .env على السيرفر
# ⚠️ غيّر جميع القيم المطلوبة قبل النشر!
# ========================================

# Application Settings
APP_NAME="Tamsik"
APP_ENV=production
APP_KEY=base64:GENERATE_NEW_KEY_HERE
APP_DEBUG=false
APP_URL=https://tamsik.org
APP_TIMEZONE=Asia/Aden
APP_LOCALE=ar

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database Configuration
# ⚠️ استخدم كلمة مرور قوية جداً!
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=tamsik_production
DB_USERNAME=tamsik_user
DB_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD

# Cache & Session
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=public
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Security Settings (HTTPS)
SESSION_SECURE_COOKIE=true
SESSION_SAME_SITE=lax

# Redis (Optional - للأداء الأفضل)
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# ⚠️ استخدم App Password من Gmail
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=info@tamsik.org
MAIL_PASSWORD=CHANGE_THIS_TO_APP_PASSWORD
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="info@tamsik.org"
MAIL_FROM_NAME="تمسيك"

# AWS (Optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Pusher (Optional)
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Vite
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Site Settings
SITE_NAME="تمسيك"
SITE_DESCRIPTION="منصة إسلامية شاملة للخطب والفتاوى والمحاضرات"
SITE_KEYWORDS="خطب,فتاوى,محاضرات,إسلام,علماء اليمن"
SITE_AUTHOR="تمسيك"
CONTACT_EMAIL="info@tamsik.org"
CONTACT_PHONE="+967-xxx-xxx-xxx"

# Upload Settings
MAX_UPLOAD_SIZE=10240
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_AUDIO_TYPES=mp3,wav,ogg
ALLOWED_VIDEO_TYPES=mp4,webm,avi
ALLOWED_DOCUMENT_TYPES=pdf,doc,docx

# Backup Settings (إذا تم تثبيت spatie/laravel-backup)
BACKUP_DISK=local
BACKUP_NOTIFICATION_EMAIL=admin@tamsik.org

# Error Tracking (إذا تم تثبيت Sentry)
# SENTRY_LARAVEL_DSN=https://your-dsn@sentry.io/project-id

